{
    "name": "PostSaving",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Save postcard pictures you like from PostCrossing",
    "icons": { "16": "img/postsaving16.png",
               "48": "img/postsaving48.png",
               "128": "img/postsaving128.png" },
    "page_action": {
	"default_title": "PostSaving"
    },
    "content_scripts": [ {
	"matches": [ "http://www.postcrossing.com/*" ],
	"js": [ "jquery-2.0.3.min.js", "postsave.js" ]
    } ]
}
